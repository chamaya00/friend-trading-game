# ===========================================
# MOCK MODE (for quick local development)
# ===========================================
# Set to "true" to run the app without a real database or Google OAuth.
# Uses in-memory placeholder data instead.
# Great for quick testing or frontend development!
MOCK_DATA="true"

# ===========================================
# DATABASE (required when MOCK_DATA=false)
# ===========================================
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/friends_for_sale?schema=public"

# ===========================================
# NEXTAUTH (required when MOCK_DATA=false)
# ===========================================
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="generate-a-secret-key-for-production"

# ===========================================
# GOOGLE OAUTH (required when MOCK_DATA=false)
# ===========================================
# Get credentials from https://console.cloud.google.com
GOOGLE_CLIENT_ID="your-google-client-id"
GOOGLE_CLIENT_SECRET="your-google-client-secret"
